def main():
    print("Robert Rose")
    print("This program finds the average of two integers.")

    num1 = int(input("Enter the first number please:"))
    num2 = int(input("Enter the second number please:"))
    average = (num1 + num2)/2

    print("The average of the two numbers is " ,  average)

main()

